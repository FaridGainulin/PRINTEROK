.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #F9FAFB

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 0
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 0
    +above($breakpoints.md)
      padding 60px 0 0
    +above($breakpoints.xxl)
      padding 100px 0 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 20px
    margin-bottom 20px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 120px
      margin-bottom 50px
    +above($breakpoints.md)
      gap: 130px
      margin-bottom 90px
    +above($breakpoints.xxl)
      margin-bottom 217px
      gap: 167px

  &__sub-title
    position relative
    width 100%
    padding 15px 10px
    background-color #fff
    border-radius: 10px
    margin-top 20px
    +above($breakpoints.sm)
      border-radius: 15px
      width 250px
      padding 20px 5px 20px 15px
      margin-top 20px
    +above($breakpoints.md)
      border-radius: 20px
      width 325px
      padding 25px 5px 25px 25px
      margin-top 25px
    +above($breakpoints.xxl)
      padding 35px 5px 34px 33px
      width 425px
      height: 125px
      margin-top 35px

  &__sub-title-icon
    position: absolute
    width 20px
    height: 20px
    bottom: 0
    transform: translateY(50%)
    left: 10px
    +above($breakpoints.sm)
      width 26px
      height: 26px
      left: 20px
    +above($breakpoints.md)
      width 30px
      height: 30px
      left: 30px
    +above($breakpoints.xxl)
      width 34px
      height: 34px
      left: 40px

  &__box-right
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    backdrop-filter: blur(25px);
    background: rgba(255, 255, 255, 0.6)
    border-radius: 10px
    padding 15px 10px
    +above($breakpoints.sm)
      border-radius: 15px
      align-items: flex-start
      gap: 15px
      width: 261px;
      padding: 25px 45px 25px 45px;
    +above($breakpoints.md)
      border-radius: 20px
      gap: 20px
      width 325px
      padding 35px 10px 35px 50px
    +above($breakpoints.xxl)
      gap: 30px
      width 380px
      height: 375px
      padding 38px 10px 43px 62px
      margin-top 7px

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 8px
      width 170px
    +above($breakpoints.md)
      gap: 12px
      width 220px
    +above($breakpoints.xxl)
      gap: 14px
      width 251px
