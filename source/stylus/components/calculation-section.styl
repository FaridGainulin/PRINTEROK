.calculation-section
  background-image: url('../images/calculation-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #1D4153

  &__container
    position relative
    z-index 1
    padding 20px 0
    color: #fff
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 70px
    +above($breakpoints.md)
      padding 70px 0 90px
    +above($breakpoints.xxl)
      padding 100px 0 139px

  &__title
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 80px

  &__block-calc
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 20px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 120px

  &__select
    background-color: #375C6D
    color: #fff
    border-radius: 10px
    border: none
    appearance: none
    outline: none
    cursor: pointer
    font-family: 'Inter-Medium'
    background-image: url('../images/calculation-section-icon.svg')
    background-repeat: no-repeat
    background-position: right 15px center;
    background-size: 14px 14px;
    width: 280px;
    height: 36px;
    font-size: 13px;
    padding: 10px 15px 10px 15px;
    +above($breakpoints.sm)
      background-position: right 15px center;
      background-size: 18px 14px;
      width: 313px;
      height: 56px;
      font-size: 16px;
      padding: 15px 15px 15px 15px;
    +above($breakpoints.md)
      width: 400px;
      height: 68px;
      font-size: 20px;
      padding: 20px 20px 20px 20px;
      background-position: right 20px center;
      background-size: 22px 14px;
    +above($breakpoints.xxl)
      width 480px
      height: 76px
      font-size: 24px
      padding 23px 24px 24px 28px
      background-position: right 24px center
      background-size: 23px 14px

  &__select option
    font-family: 'Inter-Medium'
    +above($breakpoints.xxl)
      font-size: 20px

  &__block-right
    +above($breakpoints.sm)
      width 390px
    +above($breakpoints.md)
      width 516px
    +above($breakpoints.xxl)
      width 580px

  &__label
    margin-bottom 12px
    +above($breakpoints.sm)
      margin-bottom 15px
    +above($breakpoints.md)
      margin-bottom 17px
    +above($breakpoints.xxl)
      margin-bottom 19px

  &__result
    display: flex
    justify-content space-between
    border-bottom: 2px solid rgba(255, 255, 255, 0.2)
    padding 20px 0 5px
    +above($breakpoints.sm)
      padding 40px 0 8px
    +above($breakpoints.md)
      padding 55px 0 12px
    +above($breakpoints.xxl)
      padding 68px 0 16px

.slider-container
  width: 100%
  padding: 20px

.slider
  -webkit-appearance: none
  width: 100%
  height: 6px
  border-radius: 5px
  outline: none
  cursor: pointer
  background: linear-gradient(to right, #008dd2 50%, #ffffff 50%)
  +above($breakpoints.sm)
    height: 7px
  +above($breakpoints.md)
    height: 9px
  +above($breakpoints.xxl)
    height: 11px

  &::-webkit-slider-runnable-track
    height: 11px
    border-radius: 5px
    background: inherit

  &::-webkit-slider-thumb
    -webkit-appearance: none
    width: 15px
    height: 15px
    background-color: #fff
    border: 1px solid #008dd2
    border-radius: 50%
    cursor: pointer
    margin-top: -3px
    +above($breakpoints.sm)
      width: 20px
      height: 20px
      border: 2px solid #008dd2
      margin-top: -5px
    +above($breakpoints.md)
      width: 25px
      height: 25px
      border: 3px solid #008dd2
      margin-top: -7px
    +above($breakpoints.xxl)
      width: 31px
      height: 31px
      border: 4px solid #008dd2
      margin-top: -10px

  &::-moz-range-thumb
    width: 31px
    height: 31px
    background-color: #fff
    border: 4px solid #008dd2
    border-radius: 50%
    cursor: pointer

.slider-labels
  display: flex
  justify-content space-between
  margin: 15px -5px 0;
  +above($breakpoints.sm)
    margin: 20px -5px 0;
  +above($breakpoints.md)
    margin: 30px -5px 0;
  +above($breakpoints.xxl)
    margin: 38px -5px 0;
.slider-labels span
  cursor: pointer
  transition: color 0.2s
  display: flex
  justify-content center
  align-items: center
  border-radius: 50%
  width 23px
  height: 23px
  +above($breakpoints.sm)
    width 30px
    height: 30px
  +above($breakpoints.md)
    width 35px
    height: 35px
  +above($breakpoints.xxl)
    width 43px
    height: 43px
  &.active
    font-family: 'Inter-Bold'
    background-color rgba(255, 255, 255, 0.1)
    border 1px solid rgba(255, 255, 255, 0.2)
