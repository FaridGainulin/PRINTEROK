.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 150px
    height: auto
    +above($breakpoints.sm)
      width 180px
    +above($breakpoints.md)
      width 260px
    +above($breakpoints.xxl)
      width 304px

  &__connection
    display: flex
    align-items: center
    gap: 6px
    +above($breakpoints.sm)
      gap: 8px;
    +above($breakpoints.md)
      gap: 10px;
    +above($breakpoints.xxl)
      gap: 12px

  &__connection-icon
    width 12px
    height: 11px
    fill: #008DD2
    +above($breakpoints.sm)
      fill: #fff
      width 14px
      height: 14px
    +above($breakpoints.md)
      width 16px
      height: 16px
    +above($breakpoints.xxl)
      width 18px
      height: 18px
